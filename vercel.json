{
    "version": 2,
    "name": "my-mern-app",
    "builds": [
      {
        "src": "server/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "client/build"
        }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/server/index.js" },
      { "src": "/(.*)", "dest": "/client/build/$1" }
    ]
  }
  